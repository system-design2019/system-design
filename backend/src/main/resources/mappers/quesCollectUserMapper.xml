<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.timoney.swsad.mapper.QuesCollectUserMapper">

    <!--删除表-->
    <update id="quesCollectUserTableDrop" >
        drop table ques_collect_user_table
    </update>
    <!--初始化表-->
    <update id="quesCollectUserTableInit" >
        create table if not exists ques_collect_user_table
        (
            quesId      bigint(32) ,
            userId      bigint(32) ,
            primary key (quesId, userId)
        )ENGINE=InnoDB DEFAULT CHARSET=utf8
    </update>
    <!--添加记录-->
    <insert id="insert" parameterType="QuesCollectUser" useGeneratedKeys="true" keyProperty="id">
        insert into ques_collect_user_table(quesId,userId)
        values(#{quesId},#{userId})
    </insert>
    <!--删除记录-->
    <delete id="delete" parameterType="int" >
        delete from ques_collect_user_table
        where quesId = #{quesId} and userId = #{userId}
    </delete>
    <!--获取指定用户填写的所有问卷-->
    <select id="getAllCollectedId" parameterType="int" resultType="int">
        select quesId from ques_collect_user_table
        where userId = #{userId}
    </select>
    <!--获取指定问卷所有的填写者-->
    <select id="getAllCollectorId" parameterType="int" resultType="int">
        select userId from ques_collect_user_table
        where quesId = #{quesId}
    </select>
</mapper>